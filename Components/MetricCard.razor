<div class="card text-center shadow-sm" style="background-color: @BackgroundColor;">
    <div class="card-body d-flex align-items-center">
        <!-- Icon -->
        <div class="rounded-circle d-flex justify-content-center align-items-center me-3" style="width: 50px; height: 50px; background-color: @IconBackgroundColor; color: @IconColor;">
            @ChildContent
        </div>
        <!-- Metric Details -->
        <div>
            <h5 class="card-title fw-bold mb-1">@MetricValue</h5>
            <p class="card-text text-muted mb-0">@MetricLabel</p>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string BackgroundColor { get; set; } = "#f8f9fa"; 

    [Parameter]
    public string IconBackgroundColor { get; set; } = "#e9ecef"; 

    [Parameter]
    public string IconColor { get; set; } = "#343a40"; 

    [Parameter]
    public string MetricValue { get; set; } = "0"; 
    [Parameter]
    public string MetricLabel { get; set; } = "Metric"; 

    [Parameter]
    public RenderFragment ChildContent { get; set; } = default!; 
}
